{
  "name": "cusbase",
  "version": "0.0.4",
  "description": "a vue typescript lib maker",
  "keywords": [
    "vue",
    "typescript"
  ],
  "homepage": "https://github.com/chao-hua/cusbase",
  "private": false,
  "license": "MIT",
  "author": "chaohua@outlook.com",
  "main": "lib/cusbase.common.js",
  "files": [
    "lib",
    "packages"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chao-hua/cusbase.git"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "v": "node build/update-version.js",
    "lint-css": "stylelint 'packages/**/*.vue' --fix",
    "build": "vue-cli-service build --target lib --name cusbase --dest lib ./packages/index.ts",
    "deploy": "npm run build && npm publish"
  },
  "dependencies": {
    "core-js": "^3.6.4",
    "vue": "^2.6.10",
    "vue-class-component": "^7.2.3",
    "vue-property-decorator": "^8.4.1",
    "vue-router": "^3.1.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "@vue/cli-plugin-babel": "~4.3.0",
    "@vue/cli-plugin-eslint": "~4.3.0",
    "@vue/cli-plugin-router": "~4.3.0",
    "@vue/cli-plugin-typescript": "~4.3.0",
    "@vue/cli-service": "~4.3.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^6.2.2",
    "less": "^3.0.4",
    "less-loader": "^5.0.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "prettier-stylelint": "^0.4.2",
    "stylelint": "^13.3.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-webpack-plugin": "^1.2.3",
    "typescript": "~3.8.3",
    "vue-template-compiler": "^2.6.10"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.{css,vue,less,sass,scss}": [
      "stylelint --fix",
      "git add"
    ]
  }
}